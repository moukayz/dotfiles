[credential]
	helper = cache
[diff]
	tool = vimdiff
[diftool]
	prompt = false
[difftool]
	prompt = false
[core]
	autocrlf = input

[pager]
	diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    features = myconfig line-number minus-plus
    whitespace-error-style = 22 reverse

[delta "myconfig"]
	; syntax-theme =
	navigate = true
	; side-by-side = true
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
	hunk-header-decoration-style = yellow box ol

[delta "line-number"]
	line-numbers = true
	line-numbers-left-style = cyan
	line-numbers-left-format = "{nm:^3}⋮" 
	line-numbers-right-style = cyan 
	line-numbers-right-format = "{np:^3}│ " 
	line-numbers-minus-style = "#B10036"
	line-numbers-plus-style = "#03a4ff"
	line-numbers-zero-style = "#999999"

[delta "minus-plus"]
	minus-style = syntax "#bd2828"
	minus-emph-style = syntax bold ul "#d11b06"
	plus-style = syntax "#066b2a"
	plus-emph-style = syntax bold "#058040"

[interactive]
    diffFilter = delta --color-only
[user]
	email = mouka0905@gmail.com
	name = moukayz
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
	ui = auto
