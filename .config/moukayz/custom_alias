# set git alias
alias gs="git status"
alias gss="git status -s"
alias gcm="git commit -m"
alias gca="git commit -am"
alias glo="git log --oneline"
alias gln="git log --name-only"
alias glp="git log -p"
alias gaa="git add ."
alias gau="git add -u"
alias gprb="git pull --rebase"
alias gp="git push"
alias gd="git diff"
alias gsc="git diff --name-only --diff-filter=U --relative"

# set yadm alias
alias ys="yadm status"
alias yss="yadm status -s"
alias ya="yadm add"
alias yau="yadm add -u"
alias ylo="yadm log --oneline"
alias ylp="yadm log -p"
alias yln="yadm log --name-only"
alias ycm="yadm commit -m"
alias yca="yadm commit -am"
alias yp="yadm push"
alias yd="yadm diff"

alias ua-config="sudo update-alternatives --config"
alias ua-install="sudo update-alternatives --install"

alias config-nvim="vim ~/.config/nvim/init.vim"
